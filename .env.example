# DRADIS Configuration Template
# Copy this file to .env and fill in your details
# All configuration is now consolidated in this single file

# =============================================================================
# USER PROFILE
# =============================================================================
USER_ORCID=0000-0000-0000-0000
USER_INSPIRE_ID=123456
USER_GOOGLE_SCHOLAR=https://scholar.google.com/citations?user=YOUR_ID
USER_EMAIL=your.email@institution.edu

# =============================================================================
# AI API KEYS
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_METHOD=mutt
MUTT_COMMAND=mutt
MUTT_FROM_ADDRESS=your.email@institution.edu

# SMTP Settings (for automated emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your.email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_TLS=true
SMTP_AUTH=true
SMTP_STARTTLS=true

# Mutt Settings
MUTT_DISABLE_CRYPTO=true
MUTT_CHARSET=utf-8
MUTT_LOG_FILE=~/.msmtp-automated.log

# =============================================================================
# FRIENDS/COLLABORATORS
# =============================================================================
# Friend names (comma-separated)
FRIEND_NAMES=Colleague One,Colleague Two,Colleague Three

# Friend institutions (comma-separated, matching order above)
FRIEND_INSTITUTIONS=University A,University B,University C

# Friend collaboration counts (comma-separated, matching order above)
FRIEND_PAPERS=5,3,2

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_PATH=dradis.db

# =============================================================================
# SYSTEM SETTINGS
# =============================================================================
# Analysis settings
RELEVANCE_THRESHOLD=0.7
BATCH_SIZE=20
MAX_WORKERS=5

# Logging
LOG_LEVEL=INFO
DEV_MODE=false